<Window x:Class="在线阅读.SetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" Height="300" Width="300" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"  Icon="reader.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="MenuList" MouseDoubleClick="MenuList_MouseDoubleClick">
            <ListBoxItem Content="常规"/>
            <ListBoxItem Content="正则表达式"/>
        </ListBox>
        <Frame x:Name="PageFrame" Grid.Row="0" Grid.Column="1" Margin="2" NavigationUIVisibility="Hidden"/>
        <Button x:Name="SavaBtn" Grid.Row="1" Grid.Column="1" Content="保存" Height="40" Width="100" Click="SavaBtn_Click"/>
    </Grid>
</Window>
